<h1 class="text-center mbo">Players</h1>
<div class="end">
  <%= link_to "Add Player", new_player_path, class: "btn btn-primary mr" %>
</div>

<% if @players.length == 0 %>
  <h3 class="text-center">No Player Please Add player</h3>
<% else %>
  <div class="row">
    <% @players.each do | player | %>
      <div class="col-sm-6 mb-3 mb-sm-0">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= player.name %></h5>
            <p class="card-text">Number of Game: <%= player.games.count %></p>
            <p class="card-text"><%= player.created_at.strftime("%I:%M:%S %p") %>
              <br/><span><%= player.created_at.strftime("%b %Y %d") %></span></p>
            <a href="<%= " /players/#{player.id}/games" %>" class="btn btn-primary">Games List</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
